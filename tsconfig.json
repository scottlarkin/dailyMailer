{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "out",
    "sourceMap": true,
    "lib": ["es6"],
    "types": ["reflect-metadata", "node"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "/src/**/*",
    "/types/*",
    "/node_modules/@types/*"
  ]
}
